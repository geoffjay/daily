    <p class="mr-2 mb-px text-xs capitalize tracking-wide cursor-pointer"><%= @color %></p>
  </div>
  <div class="grid grid-cols-10 h-10 justify-items-stretch w-full">
    <div class="p-2 bg-<%= @color %>-50">50</div>
    <div class="p-2 bg-<%= @color %>-100">100</div>
    <div class="p-2 bg-<%= @color %>-200">200</div>
    <div class="p-2 bg-<%= @color %>-300">300</div>
    <div class="p-2 bg-<%= @color %>-400">400</div>
    <div class="p-2 bg-<%= @color %>-500">500</div>
    <div class="p-2 bg-<%= @color %>-600">600</div>
    <div class="p-2 bg-<%= @color %>-700">700</div>
    <div class="p-2 bg-<%= @color %>-800">800</div>
    <div class="p-2 bg-<%= @color %>-900">900</div>
  </div>
</div>
