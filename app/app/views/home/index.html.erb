<div class="h-screen w-full flex flex-col justify-between">
  <%= render 'partials/header' %>
  <div class="mx-auto w-full p-8">
    <div class="flex flex-col md:flex-row justify-center">
      <div class="md:w-1/2 max-w-md flex flex-col justify-center text-slate-600">
        <div class="md:text-4xl text-xl font-black">Track tasks @daily</div>
        <div class="text-xl mt-4">Keep on top of daily activities easily</div>
      </div>
      <div class="md:w-1/2 flex justify-start mt-2 md:justify-end w-full md:w-1/2">
        <div class="bg-slate-100 shadow-md flex-auto max-w-sm p-10 pb-20 rounded">
          <div class="w-full">
            <div class="font-bold h-6 mt-3 text-slate-600 text-xs leading-8 uppercase">
              <span class="text-red-400 mr-1">*</span>First Name
            </div>
            <div class="my-2 bg-white p-1 flex border border-gray-200 rounded">
              <input placeholder="John" class="p-1 px-2 appearance-none outline-none w-full text-slate-800">
            </div>
          </div>
          <div class="w-full">
            <div class="font-bold h-6 mt-3 text-slate-600 text-xs leading-8 uppercase">
              <span class="text-red-400 mr-1">*</span>Last Name
            </div>
            <div class="my-2 bg-white p-1 flex border border-gray-200 rounded">
              <input placeholder="Doe" class="p-1 px-2 appearance-none outline-none w-full text-slate-800">
            </div>
          </div>
          <div class="w-full">
            <div class="font-bold h-6 mt-3 text-slate-600 text-xs leading-8 uppercase">
              <span class="text-red-400 mr-1">*</span>Email
            </div>
            <div class="my-2 bg-white p-1 flex border border-gray-200 rounded">
              <input placeholder="john@doe.com" class="p-1 px-2 appearance-none outline-none w-full text-slate-800">
            </div>
          </div>
          <div class="mt-6 relative">
            <div class="shadow-md font-medium py-2 px-4 text-green-100 cursor-pointer bg-teal-600 rounded text-lg tr-mt absolute text-center w-full">
              Submit
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'partials/footer' %>
</div>
