<div class="h-screen w-full flex flex-col justify-between">
  <%= render 'partials/header' %>
  <div class="mx-auto w-full p-8">
    <div class="flex flex-col md:flex-row justify-center">
      <div class="md:w-1/2 max-w-md flex flex-col justify-center text-slate-600">
        <div class="md:text-4xl text-xl font-black">Track tasks @daily</div>
        <div class="text-xl mt-4">Keep on top of daily activities easily</div>
      </div>
      <div class="md:w-1/2 flex justify-start mt-2 md:justify-end">
        <div class="bg-slate-100 shadow-md flex-auto max-w-sm p-10 pb-20 rounded">
          <%= form_with model: @user, builder: TailwindFormBuilder, url: auth_register_path do |f| %>
            <span class="text-red-400 mr-1">*</span>
            <%= f.label :email %>
            <%= f.text_field :email, placeholder: "john.doe@example.com" %>
            <span class="text-red-400 mr-1">*</span>
            <%= f.label :first_name %>
            <%= f.text_field :first_name, placeholder: "John" %>
            <span class="text-red-400 mr-1">*</span>
            <%= f.label :last_name %>
            <%= f.text_field :last_name, placeholder: "Doe" %>
            <span class="text-red-400 mr-1">*</span>
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: "password" %>
            <div class="mt-6 relative">
              <div class="shadow-md font-medium py-2 px-4 text-green-100 cursor-pointer bg-teal-600 rounded text-lg tr-mt absolute text-center w-full">
                <%= f.submit "Register" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'partials/footer' %>
</div>
