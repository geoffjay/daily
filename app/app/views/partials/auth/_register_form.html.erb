<%# app/views/partials/_register_form.html.erb %>
<%= render CardComponent.new do %>
  <%= form_with(
    model: @user,
    builder: TailwindFormBuilder,
    html: { novalidate: true },
    url: auth_register_path,
  ) do |f| %>
    <div class="pb-4">
      <span class="text-crimson-600 dark:text-crimson-300 mr-1">*</span>
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "john.doe@example.com", required: true %>
    </div>
    <div class="pb-4">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: "John" %>
    </div>
    <div class="pb-4">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: "Doe" %>
    </div>
    <div class="pb-4">
      <span class="text-crimson-600 dark:text-crimson-300 mr-1">*</span>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "password", required: true %>
    </div>
    <div class="mt-2 relative">
      <div class="<%= button_class(variant: "expanded", theme: "primary") %>">
        <%= f.submit "Register" %>
      </div>
    </div>
  <% end %>
<% end %>
